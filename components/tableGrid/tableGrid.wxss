/* components/classGrid/classGrid.wxss */
:host {
  flex-grow: 0;
  flex-shrink: 0;
  margin-bottom: 9rpx;
  height: 140rpx;
  max-height: 140rpx;
  width: calc(20% - 8rpx);
  overflow: hidden;
}

.mainGrid {
  width: 100%;
  height: 100%;
  max-height: 100%;
  box-sizing: border-box;
  font-size: 23rpx;
  color: white;
}

.className {
  width: 100%;
  flex-grow: 1;
  box-sizing: border-box;
  text-align: left;
  padding: 8rpx 6rpx 0 10rpx;
}

.classRoom {
  width: 100%;
  padding-left: 18rpx;
  flex-grow: 0;
  line-height: 45rpx;
  text-align: left;
}
.placeholder {
  box-sizing: border-box;
  border: 1rpx solid rgba(127, 127, 127, 0);
  width: 60rpx;
  height: 60rpx;
  border-radius: 15rpx;
  background-color: rgba(127, 127, 127, 0.3);
  transition: all 300ms;
}
.placeholder.selected {
  width: 100%;
  height: 100%;
  border: 6rpx solid rgba(157, 157, 157, 1);
  border-radius: 0;
}
.indicator{
  position: relative;
  left: 41.5rpx;
  top: 20rpx;
  width: 60rpx;
  height: 60rpx;
  transform-origin: center;
  transform: rotate(45deg);
  transition: all 300ms;
}
.indicator.selected{
  top: -20rpx;
}